 <ActiveTimerViewController
    outlet="ActiveTimerNode"
    view.backgroundColor="halfTransparent   // Active Timer Section"
    top="previous.bottom"
    left="0"
    height="220"
    width="100%">
    
    <!-- Change Button Section -->
    <UIButton
        id="ActiveTimerMenuButton"
        touchUpInside="onDidPressMenuButton"
        top="10"
        left="10"
        backgroundColor=""
        >
        <UIImageView
            image="Menu"
            contentMode="scaleAspectFit"
            top="0"
            left="0"
            height="100%"
            width="100%"
            backgroundColor=""
        />
    </UIButton>
    
    
    <!-- Timer Control Section -->
    <UIButton
        title="{isTimerRunning ? '| |':'>'}"
        touchUpInside="toggleTimerButton"
        top="50% - height/2"
        left="20% - width/2"
        height="120"
        width="120"
        backgroundColor="lightTan"
        layer.cornerRadius="height/2"
        titleLabel.font="Avenir Next 70"
    />


    <!-- Timer Time Section -->
    <UILabel
        text="{name}"
        top="22% - height/2"
        left="43%"
        height="auto"
        width="53%"
        backgroundColor=""
        font="Avenir Next 20"
        textColor="black"
    />
    <UILabel
        text="{hour}:"
        top="50% - height / 2"
        left="42%"
        height="auto"
        width="auto"
        backgroundColor=""
        font="Avenir Next ultraLight 65"
        textAlignment="center"
        textColor="black"
    />
    <UILabel
        text="{minute}"
        top="previous.top"
        left="previous.right"
        height="auto"
        width="auto"
        backgroundColor=""
        font="Avenir Next ultraLight 65"
        textAlignment="center"
        textColor="black"
    />
    <UILabel
        text="{second}"
        top="previous.top+12"
        left="previous.right+3"
        height="auto"
        width="auto"
        backgroundColor=""
        font="Avenir Next ultraLight 28"
        textAlignment="center"
        textColor="black"
    />

    
    <!-- Total Time Section -->
    <UIImageView
        image="Timer"
        contentMode="scaleAspectFit"
        bottom="parent.bottom - 35"
        left="parent.left + 42%"
        height="10%"
        width="10%"
        backgroundColor=""
    />
    <UILabel
        text="Total"
        bottom="parent.bottom - 20"
        left="previous.left + previous.width/2 - width/2"
        height="auto"
        width="auto"
        backgroundColor=""
        font="Avenir Next 10"
    />
    <UILabel
        text="{loggedTotalTime}"
        bottom="parent.bottom - 35"
        left="previous.right + 5"
        height="auto"
        width="auto"
        backgroundColor=""
        font="Avenir Next 14"
        textAlignment=""
        textColor="black //isTimerRunning ? halfTransparent : gray"
        transform.scale="//isTimerRunning ? 1.0 : 1.5"
        transform.rotation="//isTimerRunning ? pi / 2 : 0"
    />
    
    <!-- Session Count Section -->
    <UIImageView
        image="Count"
        contentMode="scaleAspectFit"
        bottom="parent.bottom - 35"
        left="previous.right + 10"
        height="10%"
        width="10%"
        tintColor="blue"
        backgroundColor=""
    />
    <UILabel
        text="Sessions"
        bottom="parent.bottom - 20"
        left="previous.left + previous.width/2 - width/2"
        height="auto"
        width="auto"
        backgroundColor=""
        font="Avenir Next 10"
    />

    <UILabel
        text="{numOfSessions}"
        bottom="parent.bottom - 35"
        left="previous.right"
        height="auto"
        width="auto"
        backgroundColor=""
        font="Avenir Next 14"
        textAlignment=""
        textColor="black //isTimerRunning ? halfTransparent : gray"
        transform.scale="//isTimerRunning ? 1.0 : 1.5"
        transform.rotation="//isTimerRunning ? pi / 2 : 0"
    />


</ActiveTimerViewController>
