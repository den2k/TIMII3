<UICollectionViewCell
    reuseIdentifier="timerCollectionCell"
    clipsToBounds="true">

    <!-- Timer background - colored circle -->
    <UIView
        top="10"
        left="50% - width/2"
        height="70"
        width="70"
        layer.cornerRadius="height/2"
        backgroundColor="{isAddButton ? summerGreen : lighterGreen //background color for timer circle}"
        >

        <!-- Timer icon image -->
         <UIImageView
             image="{timerIcon}"
             contentMode="scaleAspectFit"
             top="10"
             left="50% - width/2"
             height="65%"
             width="65%"
         />

         <!-- 1 .. n button count displayed on timer icon -->
         <!--
         <UILabel
            text="{timerButtonText}"
            top="50% - height/2"
            left="50% - width/2"
            font="Avenir Next 32"
            textColor="white"
            textAlignment="center"
            />
          -->
         
    </UIView>
    
    <!-- User generated timer name -->
    <UILabel
        text="{timerName}"
        top="previous.bottom + 5"
        left="50% - width/2"
        height="auto"
        width="auto"
        backgroundColor="// text label background color"
        font="Avenir Next 14"
        textColor="gray"
        />
 
</UICollectionViewCell>
