<SettingScreen
    outlet="SettingScreenNode"
    view.backgroundColor="white">
    
    <UIView
        width="100%"
        height="100%">

        <!-- Displays the day of the month -->
        <UILabel
            text="{mEmailLabel}"
            width="100%"
            height="auto"
            top="60"
            left="50% - width/2"
            textAlignment="center"
            textColor="blue"
            backgroundColor=""
            font="Avenir Next 21"
        />
            
        <!-- Logout Button -->
        <UIButton
            touchUpInside="settingHandleLogout"
            title="Logout"
            backgroundColor="UIColor.mintGreen"
            top="50% - height/2"
            left="50% - width/2"
            width="100% - 120"
            height="66"
            layer.cornerRadius="33"
        />
        
    </UIView>
    
</SettingScreen>
