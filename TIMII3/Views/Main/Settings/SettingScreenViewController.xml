<SettingScreenViewController
    outlet="SettingScreenNode"
    view.backgroundColor="white">

    <UIView
        height="100%"
        width="100%">

        <!-- Full Name -->
        <UILabel
            text="Full Name: {fullName}"
            top="20% - height / 2"
            left="20"
            height="auto"
            width="100%"
            backgroundColor=""
            font="Avenir Next 20"
            textColor="blue"
        />

        <!-- Username -->
        <UILabel
            text="Username: {userName}"
            top="previous.bottom + 5"
            left="20"
            height="auto"
            width="100%"
            backgroundColor=""
            font="Avenir Next 20"
            textColor="blue"
        />

        <!-- Email -->
        <UILabel
            text="Email: {email}"
            top="previous.bottom + 5"
            left="20"
            height="auto"
            width="100%"
            backgroundColor=""
            font="Avenir Next 20"
            textColor="blue"
        />

        <!-- Logout Button -->
        <UIButton
            title="Logout"
            touchUpInside="settingHandleLogout"
            top="80% - height / 2"
            left="50% - width / 2"
            height="66"
            width="100% - 120"
            backgroundColor="UIColor.mintGreen"
            layer.cornerRadius="33"
        />

    </UIView>
</SettingScreenViewController>
