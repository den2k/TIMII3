<SettingScreenViewController
    outlet="SettingScreenNode"
    view.backgroundColor="white">

    <UIView
        height="100%"
        width="100%">

        <!-- Logout Button -->
        <UIButton
            backgroundColor="UIColor.mintGreen"
            height="66"
            layer.cornerRadius="33"
            left="50% - width / 2"
            title="Logout"
            top="50% - height / 2"
            touchUpInside="settingHandleLogout"
            width="100% - 120"
        />

        <!-- Displays the day of the month -->
        <UILabel
            backgroundColor=""
            font="Avenir Next 12"
            height="auto"
            left="50% - width / 2"
            text="Email: {mEmailLabel}"
            textAlignment="center"
            textColor="blue"
            top="previous.bottom + 15"
            width="100%"
        />
    </UIView>
</SettingScreenViewController>
