<TimiiActiveViewController
    outlet="TimiiActiveNode"
    view.backgroundColor="purple   // Active Timer Section"
    top="previous.bottom"
    left="0"
    height="200"
    width="100%">
    
    <UILabel
        text="{name}"
        top="50% - height / 2"
        left="50"
        height="auto"
        width="auto"
        backgroundColor=""
        font="Avenir Next 42"
        textAlignment="center"
        textColor="white"
    />
    
    <UILabel
        text="{minute}"
        top="50% - height / 2"
        left="previous.right + 50"
        height="auto"
        width="auto"
        backgroundColor=""
        font="Avenir Next 22"
        textAlignment="center"
        textColor="white"
    />
    
    <UILabel
        text="{second}"
        top="50% - height / 2"
        left="previous.right + 50"
        height="auto"
        width="auto"
        backgroundColor=""
        font="Avenir Next 22"
        textAlignment="center"
        textColor="white"
    />
</TimiiActiveViewController>
